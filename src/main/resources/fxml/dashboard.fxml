<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.financetracker.controllers.DashboardController"
            styleClass="dashboard-root">
    
    <!-- ========== SIDEBAR ========== -->
    <left>
        <VBox styleClass="sidebar" prefWidth="256" spacing="0">
            
            <!-- Логотип и название -->
            <VBox styleClass="sidebar-header" spacing="5" alignment="CENTER_LEFT">
                <Label text="Finance Tracker" styleClass="sidebar-title"/>
                <Label text="Личные финансы" styleClass="sidebar-subtitle"/>
                <VBox.margin>
                    <Insets top="24" right="24" bottom="20" left="24"/>
                </VBox.margin>
            </VBox>
            
            <!-- Меню навигации -->
            <VBox styleClass="sidebar-menu" spacing="4" VBox.vgrow="ALWAYS">
                
                <Button fx:id="dashboardMenuItem" styleClass="menu-item, menu-item-active"
                       onAction="#handleDashboardClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/dashboard_active.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Dashboard" styleClass="menu-label"/>
                                <Label text="Сводка" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="operationsMenuItem" styleClass="menu-item"
                       onAction="#handleOperationsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/operations.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Operations" styleClass="menu-label"/>
                                <Label text="Операции" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="categoriesMenuItem" styleClass="menu-item"
                       onAction="#handleCategoriesClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/categories.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Categories" styleClass="menu-label"/>
                                <Label text="Категории" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="plansLimitsMenuItem" styleClass="menu-item"
                       onAction="#handlePlansLimitsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/limits.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Plans/Limits" styleClass="menu-label"/>
                                <Label text="Лимиты" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="goalsDebtsMenuItem" styleClass="menu-item"
                       onAction="#handleGoalsDebtsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/goals.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Goals &amp; Debts" styleClass="menu-label"/>
                                <Label text="Цели и долги" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="settingsMenuItem" styleClass="menu-item"
                       onAction="#handleSettingsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/settings.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Settings" styleClass="menu-label"/>
                                <Label text="Настройки" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>
                
                <VBox.margin>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </VBox.margin>
            </VBox>
            
            <!-- Профиль пользователя -->
            <HBox styleClass="sidebar-profile" spacing="12" alignment="CENTER_LEFT">
                <StackPane styleClass="profile-avatar">
                    <Label text="ИП" styleClass="profile-initials"/>
                </StackPane>
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label fx:id="userNameLabel" text="Иван Петров" styleClass="profile-name"/>
                    <Label fx:id="userEmailLabel" text="ivan@example.com" styleClass="profile-email"/>
                </VBox>
                <VBox.margin>
                    <Insets top="10" right="15" bottom="15" left="15"/>
                </VBox.margin>
            </HBox>
            
        </VBox>
    </left>
    
    <!-- ========== MAIN CONTENT ========== -->
    <center>
        <VBox styleClass="main-content">
            
            <!-- Верхняя панель -->
            <HBox styleClass="top-bar"
                  alignment="CENTER_LEFT"
                  spacing="20"
                  prefHeight="64">

                <padding>
                    <Insets top="20" right="32" bottom="20" left="32"/>
                </padding>

                <!-- Поиск -->
                <HBox styleClass="search-box"
                      alignment="CENTER_LEFT"
                      spacing="10"
                      prefWidth="570"
                      maxWidth="570">

                    <FontAwesomeIconView glyphName="SEARCH"
                                         size="14"
                                         styleClass="search-icon"/>

                    <TextField fx:id="searchField"
                               promptText="Поиск операций, категорий..."
                               styleClass="search-field"
                                prefWidth="190"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="+ Добавить операцию"
                        styleClass="primary-button"
                        onAction="#handleAddOperation"/>

                <Button styleClass="icon-button"
                        onAction="#handleNotifications">
                    <graphic>
                        <StackPane>
                            <FontAwesomeIconView glyphName="BELL"
                                                 size="18"
                                                 styleClass="icon-button-icon"/>
                            <Label text="3"
                                   styleClass="notification-badge"/>
                        </StackPane>
                    </graphic>
                </Button>

                <Button styleClass="icon-button"
                        onAction="#handleProfile">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER"
                                             size="18"
                                             styleClass="icon-button-icon"/>
                    </graphic>
                </Button>

            </HBox>

            <!-- Основной контент с прокруткой -->
            <ScrollPane styleClass="content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox spacing="25">

                    <!-- Карточки статистики -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="16" bottom="16" left="16" right="16"/>
                        </padding>
                        <!-- Баланс -->
                        <VBox styleClass="stat-card" spacing="12" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT">
                                <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/balance.png"/>
                                    </image>
                                </ImageView>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="+12.5%" styleClass="stat-change, stat-positive"/>
                            </HBox>
                            <Label text="Баланс за месяц" styleClass="stat-label"/>
                            <Label fx:id="balanceLabel" text="₽ 245,680" styleClass="stat-value"/>
                        </VBox>

                        <!-- Доходы -->
                        <VBox styleClass="stat-card" spacing="12" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT">
                                <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/income.png"/>
                                    </image>
                                </ImageView>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="+8.2%" styleClass="stat-change, stat-positive"/>
                            </HBox>
                            <Label text="Доходы" styleClass="stat-label"/>
                            <Label fx:id="incomeLabel" text="₽ 320,450" styleClass="stat-value"/>
                        </VBox>

                        <!-- Расходы -->
                        <VBox styleClass="stat-card" spacing="12" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT">
                                <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/expensions.png"/>
                                    </image>
                                </ImageView>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="-3.1%" styleClass="stat-change, stat-negative"/>
                            </HBox>
                            <Label text="Расходы" styleClass="stat-label"/>
                            <Label fx:id="expensesLabel" text="₽ 74,770" styleClass="stat-value"/>
                        </VBox>

                        <!-- Экономия -->
                        <VBox styleClass="stat-card" spacing="12" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT">
                                <ImageView fitWidth="48" fitHeight="48" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/economy.png"/>
                                    </image>
                                </ImageView>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="+15.8%" styleClass="stat-change, stat-positive"/>
                            </HBox>
                            <Label text="Экономия" styleClass="stat-label"/>
                            <Label fx:id="savingsLabel" text="₽ 245,680" styleClass="stat-value"/>
                        </VBox>
                        
                    </HBox>
                    
                    <!-- Графики -->
                    <HBox spacing="20" alignment="TOP_CENTER">
                        <padding>
                            <Insets bottom="16" left="16" right="16"/>
                        </padding>
                        <!-- Круговая диаграмма -->
                        <VBox styleClass="chart-card" spacing="15" HBox.hgrow="ALWAYS">
                            <Label text="Расходы по категориям" styleClass="chart-title"/>
                            
                            <PieChart fx:id="categoryPieChart" styleClass="category-pie-chart" 
                                     legendVisible="false" prefHeight="280"/>
                            
                            <!-- Легенда -->
                            <VBox fx:id="categoryLegend" spacing="8" styleClass="chart-legend"/>
                            
                        </VBox>
                        
                        <!-- Столбчатая диаграмма -->
                        <VBox styleClass="chart-card" spacing="15" HBox.hgrow="ALWAYS">
                            <Label text="Доходы и расходы по месяцам" styleClass="chart-title"/>
                            
                            <BarChart fx:id="monthlyBarChart" styleClass="monthly-bar-chart" 
                                     legendVisible="true" prefHeight="350" animated="true">
                                <xAxis>
                                    <CategoryAxis fx:id="xAxis" label="" side="BOTTOM"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="yAxis" label="" side="LEFT" 
                                               tickLabelFormatter="$null" autoRanging="true"/>
                                </yAxis>
                            </BarChart>
                            
                        </VBox>
                        
                    </HBox>

                    <!-- Топ категорий + Последние операции -->
                    <HBox spacing="20" alignment="TOP_CENTER">
                        <padding>
                            <Insets bottom="16" left="16" right="16"/>
                        </padding>

                        <!-- Топ категорий расходов -->
                        <VBox styleClass="chart-card" spacing="15" prefWidth="400" minWidth="350">
                            <Label text="Топ категорий расходов" styleClass="chart-title"/>
                            <VBox fx:id="topCategoriesContainer" spacing="16"/>
                        </VBox>

                        <!-- Последние операции -->
                        <VBox styleClass="chart-card" spacing="15" HBox.hgrow="ALWAYS">
                            <Label text="Последние операции" styleClass="chart-title"/>
                            <VBox fx:id="recentOperationsContainer" spacing="10"/>
                        </VBox>
                    </HBox>

                </VBox>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
