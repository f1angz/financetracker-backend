<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.financetracker.controllers.CategoriesController"
            styleClass="dashboard-root">
    
    <!-- ========== SIDEBAR ========== -->
    <left>
        <VBox styleClass="sidebar" prefWidth="256">

            <!-- Логотип и название -->
            <VBox styleClass="sidebar-header" spacing="5" alignment="CENTER_LEFT">
                <Label text="Finance Tracker" styleClass="sidebar-title"/>
                <Label text="Личные финансы" styleClass="sidebar-subtitle"/>
                <VBox.margin>
                    <Insets top="24" right="24" bottom="20" left="24"/>
                </VBox.margin>
            </VBox>

            <!-- Меню навигации -->
            <VBox styleClass="sidebar-menu" spacing="4" VBox.vgrow="ALWAYS">

                <Button fx:id="dashboardMenuItem" styleClass="menu-item, menu-item-active"
                        onAction="#handleDashboardClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/dashboard_active.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Dashboard" styleClass="menu-label"/>
                                <Label text="Сводка" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="operationsMenuItem" styleClass="menu-item"
                        onAction="#handleOperationsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/operations_active.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Operations" styleClass="menu-label"/>
                                <Label text="Операции" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="categoriesMenuItem" styleClass="menu-item"
                        onAction="#handleCategoriesClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/categories.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Categories" styleClass="menu-label"/>
                                <Label text="Категории" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="plansLimitsMenuItem" styleClass="menu-item"
                        onAction="#handlePlansLimitsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/limits.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Plans/Limits" styleClass="menu-label"/>
                                <Label text="Лимиты" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="goalsDebtsMenuItem" styleClass="menu-item"
                        onAction="#handleGoalsDebtsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/goals.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Goals &amp; Debts" styleClass="menu-label"/>
                                <Label text="Цели и долги" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="settingsMenuItem" styleClass="menu-item"
                        onAction="#handleSettingsClick" maxWidth="Infinity">
                    <graphic>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/settings.png"/>
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label text="Settings" styleClass="menu-label"/>
                                <Label text="Настройки" styleClass="menu-sublabel"/>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <VBox.margin>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </VBox.margin>
            </VBox>

            <!-- Профиль пользователя -->
            <HBox styleClass="sidebar-profile" spacing="12" alignment="CENTER_LEFT">
                <StackPane styleClass="profile-avatar">
                    <Label text="ИП" styleClass="profile-initials"/>
                </StackPane>
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label fx:id="userNameLabel" text="Иван Петров" styleClass="profile-name"/>
                    <Label fx:id="userEmailLabel" text="ivan@example.com" styleClass="profile-email"/>
                </VBox>
                <VBox.margin>
                    <Insets top="10" right="15" bottom="15" left="15"/>
                </VBox.margin>
            </HBox>

        </VBox>
    </left>
    
    <!-- ========== MAIN CONTENT ========== -->
    <center>
        <VBox styleClass="main-content">
            
            <!-- Верхняя панель -->
            <HBox styleClass="top-bar"
                  alignment="CENTER_LEFT"
                  spacing="20"
                  prefHeight="64">

                <padding>
                    <Insets top="20" right="32" bottom="20" left="32"/>
                </padding>

                <!-- Поиск -->
                <HBox styleClass="search-box"
                      alignment="CENTER_LEFT"
                      spacing="10"
                      prefWidth="570"
                      maxWidth="570">

                    <FontAwesomeIconView glyphName="SEARCH"
                                         size="14"
                                         styleClass="search-icon"/>

                    <TextField fx:id="searchField"
                               promptText="Поиск операций, категорий..."
                               styleClass="search-field"
                               prefWidth="190"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="+ Добавить операцию"
                        styleClass="primary-button"
                        onAction="#handleAddOperation"/>

                <Button styleClass="icon-button"
                        onAction="#handleNotifications">
                    <graphic>
                        <StackPane>
                            <FontAwesomeIconView glyphName="BELL"
                                                 size="18"
                                                 styleClass="icon-button-icon"/>
                            <Label text="3"
                                   styleClass="notification-badge"/>
                        </StackPane>
                    </graphic>
                </Button>

                <Button styleClass="icon-button"
                        onAction="#handleProfile">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER"
                                             size="18"
                                             styleClass="icon-button-icon"/>
                    </graphic>
                </Button>

            </HBox>
            
            <!-- Основной контент с прокруткой -->
            <ScrollPane styleClass="content-scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox spacing="32">

                    <!-- Заголовок + кнопка на одной строке -->
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <VBox spacing="8">
                            <Label text="Категории" styleClass="categories-page-title"/>
                            <Label text="Управление категориями доходов и расходов" styleClass="categories-page-subtitle"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button styleClass="primary-button"
                                onAction="#handleAddCategory">
                            <graphic>
                                <HBox spacing="8" alignment="CENTER">
                                    <FontAwesomeIconView glyphName="PLUS" size="12" fill="white"/>
                                    <Label text="Добавить категорию" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                                </HBox>
                            </graphic>
                        </Button>
                    </HBox>

                    <!-- Категории расходов -->
                    <VBox spacing="16">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Категории расходов" styleClass="section-title"/>
                            <Label fx:id="expenseBadge" styleClass="section-badge"/>
                        </HBox>

                        <GridPane fx:id="expenseCategoriesGrid" styleClass="categories-grid"
                                 hgap="16" vgap="16">
                        </GridPane>
                    </VBox>

                    <!-- Категории доходов -->
                    <VBox spacing="16">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Категории доходов" styleClass="section-title"/>
                            <Label fx:id="incomeBadge" styleClass="section-badge"/>
                        </HBox>

                        <GridPane fx:id="incomeCategoriesGrid" styleClass="categories-grid"
                                 hgap="16" vgap="16">
                        </GridPane>
                    </VBox>

                    <!-- Универсальные категории -->
                    <VBox spacing="16">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="Универсальные категории" styleClass="section-title"/>
                            <Label fx:id="universalBadge" styleClass="section-badge"/>
                        </HBox>

                        <GridPane fx:id="universalCategoriesGrid" styleClass="categories-grid"
                                 hgap="16" vgap="16">
                        </GridPane>
                    </VBox>

                    <VBox.margin>
                        <Insets top="32" right="32" bottom="32" left="32"/>
                    </VBox.margin>
                </VBox>
            </ScrollPane>
            
        </VBox>
    </center>
    
</BorderPane>
