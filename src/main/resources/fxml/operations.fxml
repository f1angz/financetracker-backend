<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="dashboard-root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financetracker.controllers.OperationsController">
    
    <!-- ========== SIDEBAR ========== -->
    <left>
        <VBox prefWidth="256" spacing="0" styleClass="sidebar">

            <!-- Логотип и название -->
            <VBox alignment="CENTER_LEFT" spacing="5" styleClass="sidebar-header">
                <Label styleClass="sidebar-title" text="Finance Tracker" />
                <Label styleClass="sidebar-subtitle" text="Личные финансы" />
                <VBox.margin>
                    <Insets bottom="20" left="24" right="24" top="24" />
                </VBox.margin>
            </VBox>

            <!-- Меню навигации -->
            <VBox spacing="4" styleClass="sidebar-menu" VBox.vgrow="ALWAYS">

                <Button fx:id="dashboardMenuItem" maxWidth="Infinity" onAction="#handleDashboardClick" styleClass="menu-item, menu-item-active">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/dashboard_active.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Dashboard" />
                                <Label styleClass="menu-sublabel" text="Сводка" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="operationsMenuItem" maxWidth="Infinity" onAction="#handleOperationsClick" styleClass="menu-item">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/operations.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Operations" />
                                <Label styleClass="menu-sublabel" text="Операции" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="categoriesMenuItem" maxWidth="Infinity" onAction="#handleCategoriesClick" styleClass="menu-item">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/categories.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Categories" />
                                <Label styleClass="menu-sublabel" text="Категории" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="plansLimitsMenuItem" maxWidth="Infinity" onAction="#handlePlansLimitsClick" styleClass="menu-item">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/limits.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Plans/Limits" />
                                <Label styleClass="menu-sublabel" text="Лимиты" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="goalsDebtsMenuItem" maxWidth="Infinity" onAction="#handleGoalsDebtsClick" styleClass="menu-item">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/goals.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Goals &amp; Debts" />
                                <Label styleClass="menu-sublabel" text="Цели и долги" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="settingsMenuItem" maxWidth="Infinity" onAction="#handleSettingsClick" styleClass="menu-item">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/settings.png" />
                                </image>
                            </ImageView>
                            <VBox spacing="1">
                                <Label styleClass="menu-label" text="Settings" />
                                <Label styleClass="menu-sublabel" text="Настройки" />
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>

                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </VBox.margin>
            </VBox>

            <!-- Профиль пользователя -->
            <HBox alignment="CENTER_LEFT" spacing="12" styleClass="sidebar-profile">
                <StackPane styleClass="profile-avatar">
                    <Label styleClass="profile-initials" text="ИП" />
                </StackPane>
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label fx:id="userNameLabel" styleClass="profile-name" text="Иван Петров" />
                    <Label fx:id="userEmailLabel" styleClass="profile-email" text="ivan@example.com" />
                </VBox>
                <VBox.margin>
                    <Insets bottom="15" left="15" right="15" top="10" />
                </VBox.margin>
            </HBox>

        </VBox>
    </left>
    
    <!-- ========== MAIN CONTENT ========== -->
    <center>
        <VBox styleClass="main-content">
            <!-- Верхняя панель -->
            <HBox alignment="CENTER_LEFT" prefHeight="64" spacing="20" styleClass="top-bar">

                <padding>
                    <Insets bottom="20" left="32" right="32" top="20" />
                </padding>

                <!-- Поиск -->
                <HBox alignment="CENTER_LEFT" maxWidth="570" prefWidth="570" spacing="10" styleClass="search-box">

                    <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="search-icon" />

                    <TextField fx:id="searchField" prefWidth="190" promptText="Поиск операций, категорий..." styleClass="search-field" />
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button onAction="#handleAddOperation" styleClass="primary-button" text="+ Добавить операцию" />

                <Button onAction="#handleNotifications" styleClass="icon-button">
                    <graphic>
                        <StackPane>
                            <FontAwesomeIconView glyphName="BELL" size="18" styleClass="icon-button-icon" />
                            <Label styleClass="notification-badge" text="3" />
                        </StackPane>
                    </graphic>
                </Button>

                <Button onAction="#handleProfile" styleClass="icon-button">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER" size="18" styleClass="icon-button-icon" />
                    </graphic>
                </Button>

            </HBox>
            
            <!-- Основной контент -->
            <VBox styleClass="operations-content" VBox.vgrow="ALWAYS">
                
                <!-- Заголовок и описание -->
                <VBox spacing="9">
                    <padding>
                        <Insets top="32" right="32" bottom="32" left="32"/>
                    </padding>
                    <Label styleClass="page-title" text="Операции"/>
                    <Label styleClass="page-subtitle" text="Управление доходами и расходами" />
                </VBox>
                
                <!-- Панель фильтров -->
                <HBox alignment="CENTER_LEFT" styleClass="filter-panel">
                    <!-- Поиск по таблице -->
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="filter-search">
                        <FontAwesomeIconView glyphName="SEARCH" size="14" styleClass="search-icon" />
                        <TextField fx:id="tableSearchField" promptText="Поиск по комментарию, категории..." styleClass="filter-search-field" />
                    </HBox>
                    
                    <!-- Фильтр по типу операции -->
                    <ComboBox fx:id="typeFilterComboBox" prefWidth="150" promptText="Все операции" styleClass="filter-combo" />
                    
                    <!-- Фильтр по категории -->
                    <ComboBox fx:id="categoryFilterComboBox" prefWidth="150" promptText="Все категории" styleClass="filter-combo" />
                    
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <!-- Кнопка фильтров -->
                    <Button onAction="#handleShowFilters" styleClass="filter-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="FILTER" size="14" />
                                <Label text="Фильтры" />
                            </HBox>
                        </graphic>
                    </Button>
                    
                    <!-- Кнопка экспорта -->
                    <Button onAction="#handleExport" styleClass="filter-button">
                        <graphic>
                            <HBox alignment="CENTER" spacing="8">
                                <FontAwesomeIconView glyphName="DOWNLOAD" size="14" />
                                <Label text="Экспорт" />
                            </HBox>
                        </graphic>
                    </Button>
                </HBox>
                
                <!-- Индикаторы типов операций -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <HBox alignment="CENTER" spacing="8">
                        <StackPane styleClass="type-indicator, type-indicator-income" />
                        <Label prefHeight="17.0" prefWidth="50.0" styleClass="type-label" text="Доходы" />
                    </HBox>
                    <HBox alignment="CENTER" spacing="8">
                        <StackPane styleClass="type-indicator, type-indicator-expense" />
                        <Label styleClass="type-label" text="Расходы" />
                    </HBox>
                </HBox>
                
                <!-- Карточка с таблицей -->
                <VBox styleClass="table-card" VBox.vgrow="ALWAYS">
                    
                    <!-- Заголовок таблицы -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label styleClass="table-header" text="Список операций (12)" />
                    </HBox>
                    
                    <!-- Таблица операций -->
                    <TableView fx:id="operationsTable" styleClass="operations-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="dateColumn" prefWidth="120" text="Дата" />
                            <TableColumn fx:id="typeColumn" prefWidth="120" text="Тип" />
                            <TableColumn fx:id="categoryColumn" prefWidth="150" text="Категория" />
                            <TableColumn fx:id="commentColumn" prefWidth="300" text="Комментарий" />
                            <TableColumn fx:id="amountColumn" prefWidth="150" styleClass="amount-column" text="Сумма" />
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="10">
                                <FontAwesomeIconView glyphName="INBOX" size="48" styleClass="empty-icon" />
                                <Label styleClass="empty-text" text="Операций пока нет" />
                                <Label styleClass="empty-subtext" text="Нажмите 'Добавить операцию' чтобы создать первую" />
                            </VBox>
                        </placeholder>
                    </TableView>
                    
                    <!-- Пагинация -->
                    <HBox alignment="CENTER" spacing="15" styleClass="pagination">
                        <Button onAction="#handlePreviousPage" styleClass="pagination-button" text="←" />
                        <Label fx:id="pageLabel" styleClass="page-number" text="1 / 1" />
                        <Button onAction="#handleNextPage" styleClass="pagination-button" text="→" />
                    </HBox>
                </VBox>
                
            </VBox>
            
        </VBox>
    </center>
    
</BorderPane>
